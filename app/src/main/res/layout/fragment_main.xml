<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lordlobo.loboweather.fragments.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <EditText
        android:id="@+id/zipText"
        android:layout_width="256dp"
        android:layout_height="49dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Zip Code or City Name"
        />

    <Button
        android:id="@+id/goButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go"
        android:layout_alignBaseline="@+id/zipText"
        android:layout_alignBottom="@+id/zipText"
        android:layout_toEndOf="@+id/zipText"
        android:layout_marginStart="7dp"/>

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Previous City"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/goButton"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/visitedList"
        android:layout_width="364dp"
        android:layout_height="283dp"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="118dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
